<!--pages/home/home.wxml-->
<text class="title">Hello World!</text>
<button>Submit</button>
<!-- 页面跳转: navigator -->
<navigator url='/pages/detail/detail'>查看详情</navigator>

<!-- 可以通过navigator的 open-data属性，改变页面跳转方式:
      默认值为：navigator
      还有：redirect--关闭当前页面，跳转到指定页面
            relaunch---关闭当前打开的所有页面，然后跳转到指定页面
            switchTab----跳转到 tabBar 页面，并关闭其他所有非 tabBar 页面
 -->
<navigator url="/pages/detail/detail" open-type="redirect">redirect</navigator>
<navigator url="/pages/detail/detail" open-type="redirect">reLaunch</navigator>


<!-- 传递参数
      目标页面的 onload中，使用options接收
-->
<navigator url="/pages/detail/detail?id=123213&cid=55" >传参跳转</navigator>

<!-- 详情页返回时修改上一页内容 -->
<view>{{title}}</view>

<!-- 页面跳转： 绑定事件 -->
<button size="mini" bind:tap="handleToUrl">按钮跳转</button>